<Window x:Class="BestBooks.MainWindow"
        xmlns:uc="clr-namespace:BestBooks.Controls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BestBooks"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="LanguageComboBox" Width="120" Height="40" SelectionChanged="LanguageComboBox_SelectionChanged"/>
        <ListView x:Name="bookList" Margin="0,52,465,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <uc:BookControl Book="{Binding}" Width="200"></uc:BookControl>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Label x:Name="UwU" Margin="0,0,608,406">UwU</Label>
    </Grid>
</Window>