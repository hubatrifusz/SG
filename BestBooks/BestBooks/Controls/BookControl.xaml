<UserControl x:Class="BestBooks.Controls.BookControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BestBooks.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <StackPanel>
        <TextBlock ><Run FontWeight="Bold">Szerző: </Run> <Run x:Name="author"></Run></TextBlock>
        <TextBlock  Margin="0,0,0,10"><Run FontWeight="Bold">Cím: </Run> <Run x:Name="title"></Run></TextBlock>
    </StackPanel>
</UserControl>
